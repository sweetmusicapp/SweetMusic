<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/textView_gridItem_artista"
            android:layout_width="222dp"
            android:layout_height="29dp"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="86dp"
            android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"
            android:gravity="center"
            android:text="artista"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="10sp"/>

        <TextView
            android:id="@+id/textView_gridItem_musica"
            android:layout_width="222dp"
            android:layout_height="29dp"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="86dp"
            android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="musica"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewArtista"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="10sp"/>

        <ImageView
            android:id="@+id/imageView_gridItem_artista"
            android:layout_width="129dp"
            android:layout_height="99dp"
            android:layout_marginStart="133dp"
            android:layout_marginLeft="133dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="133dp"
            android:layout_marginRight="133dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/textViewMusica"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ironmaiden" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>